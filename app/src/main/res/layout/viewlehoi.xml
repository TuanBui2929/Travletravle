<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relehoi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#E9FFD0"
        tools:layout_editor_absoluteX="154dp">


        <ImageView
            android:id="@+id/anhlehoi"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:scaleType="centerCrop">

        </ImageView>

        <TextView
            android:id="@+id/tieude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/anhlehoi"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/imagengay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tieude"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/tintuc_icon"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imagediachi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/imagengay"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/location_icon"
            tools:ignore="VectorDrawableCompat"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="114dp" />

        <TextView
            android:id="@+id/ngaylehoi2"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tieude"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="-1dp"
            android:layout_toRightOf="@id/imagengay"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toEndOf="@+id/imagengay"
            app:layout_constraintTop_toBottomOf="@+id/tieude" />

        <TextView
            android:id="@+id/diachilehoi2"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ngaylehoi2"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="-3dp"
            android:layout_toRightOf="@id/imagengay"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toEndOf="@+id/imagediachi"
            app:layout_constraintTop_toBottomOf="@+id/ngaylehoi2" />/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
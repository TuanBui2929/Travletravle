<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormDiadiem_Activity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DiemdenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/igkhachsan"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/goidiadiem"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/goidien2"
                android:scaleType="center"></ImageButton>

            <ImageButton
                android:id="@+id/nhantinđiaiem"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/goidiadiem"
                android:background="@drawable/nhantin2"
                android:scaleType="centerCrop"></ImageButton>



        </RelativeLayout>

        <TextView

            android:id="@+id/tieudeks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/igkhachsan"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:foregroundGravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/vitri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tieudeks"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="Địa chỉ:"
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/noidungdiachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vitri"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textStyle="normal">

        </TextView>

        <TextView
            android:id="@+id/hotline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vitri"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Hotline:"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/noidunghotline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotline"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textStyle="italic">

        </TextView>

        <TextView
            android:id="@+id/thongtin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotline"
            android:text="Thông tin:"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/thongtinkhachsan1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thongtin"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textStyle="normal">

        </TextView>
        <ImageView
            android:id="@+id/igkhachsan1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_below="@id/thongtinkhachsan2" />
        <TextView
            android:id="@+id/thongtinkhachsan2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/igkhachsan1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textStyle="normal">

        </TextView>

        <ImageView
            android:id="@+id/igkhachsan2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/thongtinkhachsan1"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop" />

    </LinearLayout>
    </RelativeLayout>


</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
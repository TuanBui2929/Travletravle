<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormKhachsanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KhachSanAc">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".KhachsanActivity">

            <LinearLayout
                android:id="@+id/khachsanac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/igks1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <ImageButton
                        android:id="@+id/goi"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="@drawable/goidien2"
                        android:scaleType="center">

                    </ImageButton>
                <ImageButton
                    android:id="@+id/nhantin"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/goi"
                    android:background="@drawable/nhantin2"
                    android:scaleType="centerCrop">
                </ImageButton>

                    <Button
                        android:id="@+id/bntdatks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="15dp"
                        android:layout_toRightOf="@+id/nhantin"
                        android:background="#FFEB3B"
                        android:text="Đặt Ngay"
                        android:textSize="20dp"
                        app:backgroundTint="@android:color/holo_green_light">

                    </Button>
                </RelativeLayout>

                <TextView

                    android:id="@+id/kstieude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/igks1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:foregroundGravity="center"
                    android:text="TextView"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/vitriac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kstieude"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Địa chỉ:"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/ksdiachi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vitriac"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"

                    android:textStyle="normal">

                </TextView>

                <TextView
                    android:id="@+id/hotlineac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ksdiachi"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Hotline:"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/kshotline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hotlineac"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textStyle="italic">

                </TextView>
                <TextView
                    android:id="@+id/giaks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kshotline"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Giá phòng:"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:id="@+id/ksgia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/giaks"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/giatour"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textStyle="italic">

                </TextView>

                <TextView
                    android:id="@+id/thongtinac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kshotline"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Thông tin khách sạn:"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/ksthongtin1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/thongtinac"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="15dp"
                    android:textStyle="normal">

                </TextView>

                <ImageView
                    android:id="@+id/igks2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/ksthongtin1"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/ksthongtin2"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/igks2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="15dp"
                    android:textStyle="normal">

                </TextView>

                <ImageView
                    android:id="@+id/igks3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/ksthongtin2"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop" />


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>